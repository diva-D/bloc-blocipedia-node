<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <main class="container">
            <% include ../static/partials/navbar.ejs %>

            <h1>Public Wikis</h1>

            <% if(currentUser) { %>
                <a href="/wikis/new" class="btn btn-success">New Wiki</a>
                <br/>
            <% } %>
            <ul class="list-group">
                <% wikis.forEach((wiki) => { %>
                    <li class="list-group-item">
                        <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
                    </li>
                <% }) %>
            </ul>
            
        </main>
    </body>
</html>